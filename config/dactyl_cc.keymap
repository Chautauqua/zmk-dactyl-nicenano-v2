&mt {
    tapping-term-ms = <500>;
};


 &sl {
     release-after-ms = <2000>;
 };

/ {
    macros {
        uppercase_G: uppercase_G {
            label = "uppercase_G";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LSHFT>
                , <&macro_tap &kp G>
                , <&macro_release &kp LSHFT>
                ;
      };
    };

    //combos {
    //    compatible = "zmk,combos";        
    //};

    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <4>;
        };
    };

    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
           bindings = <&kp>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
    &kp F1           &kp F2  &kp F3  &kp F4  &kp F5  &kp F6      &kp F7  &kp F8  &kp F9     &kp F10  &kp F11   &kp F12
    &kp MINUS        &kp N1  &kp N2  &kp N3  &kp N4  &kp N5      &kp N6  &kp N7  &kp N8     &kp N9   &kp N0    &kp N0
    &kp LBKT         &kp Q   &kp W   &kp E   &kp R   &kp T       &kp Y   &kp U   &kp I      &kp O    &kp P     &kp P
    &kp NON_US_BSLH  &kp A   &kp S   &kp D   &kp F   &kp G       &kp H   &kp J   &kp K      &kp L    &kp L     &kp L
    &kp LSHFT        &kp Z   &kp X   &kp C   &kp V   &kp B       &kp N   &kp M   &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
                           &kp SINGLE_QUOTE &kp LS(N2)  
                                                                 &kp SPACE  &kp SPACE &kp DEL   &kp LALT  &kp K_APP  &kp SPACE  
    &kp TAB  &kp ESC  &kp LCTRL &kp BSPC  &kp RET &sl SYM_L      &kp LPAR  &kp RPAR 
            >;
        };

sym_layer {
            bindings = <
    &kp F12     &kp F2  &kp F3  &kp F4  &kp F5    &kp F6       &kp F7  &kp F8  &kp F9  &kp F10 &kp F11 &kp F12
    &kp MINUS   &kp N1  &kp N2  &kp N3  &kp N4    &kp N5       &kp N6  &kp N7  &kp N8  &kp N9  &kp N0  &kp EQUAL
    &kp LBKT    &kp Q   &kp W   &kp E   &kp R     &kp T        &kp Y   &kp U   &kp I   &kp O   &kp P   &kp P
    &kp LBKT    &kp A   &kp S   &kp D   &kp F     &kp G        &kp H   &kp J   &kp K   &kp L   &kp L   &kp L
    &kp LSHFT   &kp Z   &kp X   &kp C   &kp V     &kp B        &kp N   &kp M   &kp M   &kp M   &kp M   &kp M
                                        &kp N1    &kp N2       &kp N3  &kp N4 
                             &kp DEL    &kp LALT  &kp F3       &kp F4  &kp TAB &kp TAB 
                             &kp LCTRL  &kp BSPC  &kp RET      &kp F10 &kp F11 &kp F12
            >;
        };


        nav_layer {
            bindings = <
    &kp F11     &kp F2  &kp F3  &kp F4  &kp F5 &kp F6       &kp F7  &kp F8  &kp F9  &kp F10 &kp F11 &kp F12
    &kp MINUS   &kp N1  &kp N2  &kp N3  &kp N4 &kp N5       &kp N6  &kp N7  &kp N8  &kp N9  &kp N0  &kp N0
    &kp LBKT    &kp Q   &kp W   &kp E   &kp R  &kp T        &kp Y   &kp U   &kp I   &kp O   &kp P   &kp P
    &kp LBKT    &kp A   &kp S   &kp D   &kp F  &kp G        &kp H   &kp J   &kp K   &kp L   &kp L   &kp L
    &kp LBKT    &kp Z   &kp X   &kp C   &kp V  &kp B        &kp N   &kp M   &kp M   &kp M   &kp M   &kp M
                                        &kp N1 &kp N2       &kp N3  &kp N4 
                                &kp F1 &kp F2  &kp F3       &kp F4  &kp F5  &kp F6 
                                &kp F7 &kp F8  &kp F9       &kp F10 &kp F11 &kp F12


